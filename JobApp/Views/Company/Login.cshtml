@using JobApp.Models
@model Company
@{
    Layout = null;
}


<body style="justify-content:center;align-items:center;">


    @using (Html.BeginForm("Login", "Company", FormMethod.Post))
    {
        <h1>Giriş Yap</h1>

        <span class="field-validation-error">@ViewBag.errmsg</span>


        <div class="form-group">
            @Html.TextBoxFor(m => m.Cusername, new { @class = "input-field", placeholder = "Şirket adınızı girin" })
        </div>

        <div class="form-group">
            @Html.PasswordFor(m => m.Cpassword, new { @class = "input-field", placeholder = "Şifrenizi girin" })
        </div>


        <div class="form-group">
            <input type="submit" value="Giriş Yap" class="submit-btn" />
        </div>

        <a href="@Url.Action("Register","Company")">Hesabınız yoksa şirket kaydı oluşturmak için tıklayın</a>
    }
</body>
